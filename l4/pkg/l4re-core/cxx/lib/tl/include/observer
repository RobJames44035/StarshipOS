#pragma once

#include <l4/cxx/hlist>

namespace cxx {

class Observer : public H_list_item
{
public:
  virtual void notify() = 0;
};

class Notifier : public H_list<Observer>
{
public:
  void notify()
  {
    for (Iterator i = begin(); i != end(); ++i)
      i->notify();
  }
};

}


