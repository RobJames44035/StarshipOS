#pragma once

namespace cxx { namespace arith {

template< unsigned long V >
struct Ld
{
  enum { value = Ld<V / 2>::value + 1 };
};

template<>
struct Ld<0>
{
  enum { value = ~0UL };
};

template<>
struct Ld<1>
{
  enum { value = 0 };
};

}}
