#pragma once

namespace Ldr {

inline
char *adjust_sp(char *old_sp, l4_umword_t *offs = 0)
{
  if (offs)
    *offs = 0;
  return reinterpret_cast<char *>(reinterpret_cast<l4_umword_t>(old_sp) & ~15);
}

}
